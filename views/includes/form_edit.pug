form(action="/contacts/:id", method="POST")
    .container      
        p
        //name (text)
        label(for='name') Name:
        |             
        input(type='text', name='name', required='', autofocus='', value= person.name)
                
        p
        // address (text)
        label(for='name') Address:
        |
        input(type='text', name='address', value= person.address)     
        p
        // Phone (text?)
        label(for='phone') Phone:
        |             
        input(type='number', name='phone', value= person.phone)
        |         
        p
        // email (text?)
        label(for='email') Email:
        |             
        input(type='email', name='email', value= person.email)
        |         
        p
        // contact (checkbox: phone mail email any (default))
        | How may we contact you?
        input(type='checkbox', name='cbPhone')
        |             
        label(for='cbPhone') Phone
        |             
        input(type='checkbox', name='cbMail')
        |             
        label(for='cbMail') Mail
        |             
        input(type='checkbox', name='cbEmail')
        |             
        label(for='cbEmail') Email
        |             
        input(type='checkbox', name='any', checked='')
        |             
        label(for='any') Any
        |
        p
        |         
        button.btn.btn-info(type='submit') Send me spam forever!
        input.hidden(type="text", name="id", value= person._id)